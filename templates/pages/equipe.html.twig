{% block javascript %}
    <script>
            document.addEventListener('DOMContentLoaded', function () {
                const selectMembreAutocomplete = document.querySelector('.select-membre-autocomplete');

                if (selectMembreAutocomplete) {
                    selectMembreAutocomplete.addEventListener('change', function () {
                        const form = selectMembreAutocomplete.closest('form');

                        // Serialize the form data
                        const formData = new FormData(form);

                        // Send an AJAX request to the server
                        fetch(form.action, {
                            method: 'POST',
                            body: formData,
                        })
                        .then(response => response.text())
                        .then(data => {
                            // Update the DOM with the response data (e.g., replace a div with the new content)
                            // Example: document.getElementById('update-container').innerHTML = data;
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                    });
                }
            });
        </script>
