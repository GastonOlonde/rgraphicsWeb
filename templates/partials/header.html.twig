{# {{ render(controller('App\\Controller\\HeaderController::index')) }} #}

<link rel="stylesheet" href="{{ asset('css/header.css') }}">
<link href="https://fonts.googleapis.com/css2?family=Fira+Mono&family=Poppins:wght@300&display=swap" rel="stylesheet">

<header>
    <nav>        
        <div class="logo">
            {# {{ headerData.parametrelogoHeaderblack.nom_param }} #}
            {# {{ headerData.parametrelogoHeaderwhite.nom_param }} #}
            <a href="/"><img src="" class="logo-header" id="logo-header-header"></a>
            <button class="theme">Sombre</button>
        </div>
        <div class="toggle">
            <img class="menu-hamburger ouvrir" src="{{ asset('images/menu.png') }}" alt ="burger menu">
            <img class="menu-croix fermer" src="{{ asset('images/signe-de-la-croix.png') }}" alt ="burger fermer">
        </div>
        <ul class="menu">
            <li><a class="underline" href="{{ path('app_accueil')}}">ACCUEIL</a></li>
            <li><a class="underline" href="{{ path('app_equipe')}}">ÉQUIPE</a></li>
            <li><a class="underline" href="{{ path('app_contact')}}">CONTACT</a></li>
            {% if app.user %}
                <li><a href="{{ path('app_administration')}}"><button class="btn-header">ADMINISTRATION</button></a></li>
                <li><a href="{{ path('app_logout')}}"><button class="btn-header">ME DÉCONNECTER</button></a></li>
            {% endif %}
            
        </ul>
    </nav>
</header>

<script src="{{ asset('js/header.js') }}"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    var body = document.body;
    if (body.classList.contains('dark')) {
        // La classe 'dark' est présente sur le corps du document
        // Ajoutez le code ici pour charger le logo sombre
        document.getElementById('logo-header-header').src = "";
        document.getElementById('logo-header-header').alt = "logo clair";
    } else {
        // La classe 'dark' n'est pas présente sur le corps du document
        // Ajoutez le code ici pour charger le logo clair
        document.getElementById('logo-header-header').src = "{{ asset('images/R-G.png') }}";
        document.getElementById('logo-header-header').alt = "logo sombre";
    }
});
</script>